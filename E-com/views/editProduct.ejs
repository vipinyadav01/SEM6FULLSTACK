<h2>Edit Product</h2>

<form action="/products/<%= product._id %>?_method=PUT" method="POST">
  <div>
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" value="<%= product.name %>" required>
  </div>
  
  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= product.description %></textarea>
  </div>
  
  <div>
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" min="0" step="0.01" value="<%= product.price %>" required>
  </div>
  
  <div>
    <label for="category">Category:</label>
    <select id="category" name="category" required>
      <option value="Electronics" <%= product.category === 'Electronics' ? 'selected' : '' %>>Electronics</option>
      <option value="Clothing" <%= product.category === 'Clothing' ? 'selected' : '' %>>Clothing</option>
      <option value="Home" <%= product.category === 'Home' ? 'selected' : '' %>>Home</option>
      <option value="Books" <%= product.category === 'Books' ? 'selected' : '' %>>Books</option>
      <option value="Other" <%= product.category === 'Other' ? 'selected' : '' %>>Other</option>
    </select>
  </div>
  
  <div>
    <label for="stock">Stock Quantity:</label>
    <input type="number" id="stock" name="stock" min="0" value="<%= product.stock %>" required>
  </div>
  
  <div>
    <label for="imageUrl">Image URL:</label>
    <input type="text" id="imageUrl" name="imageUrl" value="<%= product.imageUrl %>">
  </div>
  
  <button type="submit">Update Product</button>
  <a href="/products/<%= product._id %>" class="btn">Cancel</a>
</form>