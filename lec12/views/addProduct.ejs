<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add Product</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Add Product</h1>
    <% if (errors && errors.length > 0) { %>
      <div class="alert error">
        <ul>
          <% errors.forEach(e => { %>
            <li><%= e %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <form action="/add" method="POST" class="product-form">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name ? product.name : '' %>" required>
      </div>
      <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="0.01" value="<%= product.price ? product.price : '' %>" required>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= product.description ? product.description : '' %></textarea>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-submit">Add Product</button>
        <a href="/" class="btn btn-cancel">Cancel</a>
      </div>
    </form>
  </div>
</body>
</html>
